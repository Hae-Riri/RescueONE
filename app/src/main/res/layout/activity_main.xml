<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.example.rescueone.activity.MainActivity" />
    </data>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:text="Rescue One"
            android:textColor="#019AE8"
            android:textSize="45dp"
            android:gravity="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addPhones"
            android:layout_width="270dp"
            android:layout_height="95dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/layout_round"
            android:drawableLeft="@drawable/ic_person_add_56dp"
            android:padding="30dp"
            android:paddingLeft="35dp"
            android:drawablePadding="25dp"
            android:text="연락처 추가"
            android:textStyle="bold"
            android:textSize="22dp"
            android:onClick="OnClick"
            android:textColor="#807D7D">
        </Button>

        <Button
            android:onClick="OnClick"
            android:id="@+id/device"
            android:layout_width="270dp"
            android:layout_height="95dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_round"
            android:drawableLeft="@drawable/ic_bluetooth_56dp"
            android:padding="30dp"
            android:paddingLeft="35dp"
            android:drawablePadding="25dp"
            android:text="기기 연결"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#807D7D">
        </Button>

        <Button
            android:onClick="OnClick"
            android:id="@+id/settings"
            android:layout_width="270dp"
            android:layout_height="95dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_round"
            android:drawableLeft="@drawable/ic_settings_56dp"
            android:padding="30dp"
            android:paddingLeft="35dp"
            android:drawablePadding="25dp"
            android:text="개인정보설정"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#807D7D">
        </Button>

    </LinearLayout>

    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingRight="10dp"
        android:src="@drawable/battery"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-27dp"
        android:foregroundGravity="center"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/shortKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnClick"
            android:text="SHORT KEY" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/longKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnClick"
            android:paddingLeft="20dp"
            android:text="LONG KEY" />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/stopSiren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnClick"
            android:paddingLeft="20dp"
            android:text="STOP_SIREN" />


    </LinearLayout>

</RelativeLayout>
</layout>