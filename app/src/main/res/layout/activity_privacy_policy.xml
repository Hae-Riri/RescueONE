<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".activity.PrivacyPolicyActivity">

    <TextView
        android:id="@+id/title_policy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/app_title"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="28dp"
        android:textStyle="bold"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/policyText"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_marginTop="10dp"
        android:paddingTop="19dp"
        android:paddingRight="19dp"
        android:paddingLeft="19dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/title_policy">

        <TextView
            android:id="@+id/textView2"
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[개인정보 수집.이용.제공 동의서]"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
        android:paddingTop="22dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:text="rescueONE은 원활한 서비스 제공을 위하여 아래와 같은 개인정보를 요청합니다."
        android:textSize="14dp"
        android:gravity="left"
        />

        <TextView
            android:paddingTop="22dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="9dp"
            android:text="- 제공받는 자 : resscueONE Corp.\n- 제공받는 목적 : \n  이메일을 통한 사용자 개별 데이터 관리, 긴급 상황\n  시 연락처를 통한 응급 푸시 알림 및 SMS 전송"
            android:textSize="14dp"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:lineSpacingExtra="9dp"
            android:text="- 제공받는 정보 : 이름, 전화번호, 이메일, 위치 정보\n- 보유기간 : 서비스 탈퇴 시 파기"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView6"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="rescueONE은 이메일을 통한 인증 방식으로 사용자 등록을 진행합니다."
            android:textSize="14dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/policyText">



        <TextView
            android:id="@+id/textView7"
            android:paddingTop="40dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="본인은 상기 내용을 모두 확인하였고, 본인의 개인정보 제공 및 활용됨에 동의합니다."
            android:textSize="15dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/darkGrey"
            android:text="취 소"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <Button
            android:id="@+id/agree"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="동 의"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>